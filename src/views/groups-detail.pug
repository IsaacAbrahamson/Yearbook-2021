extends base

block styles
  link(rel='stylesheet', href='css/pages/groups.css')
  link(rel='stylesheet', href='css/pages/groups-detail.css')

block scripts  
  script(src='https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js')
  script(src='js/particles-alternate.js')

block content
  .jumbotron.alternate
    .overlay#particles-js
      h1 GROUPS
  section 
    h2= name
    
    .container
      .goback
        a(href=`${group}.html`) <span><</span> Back to #{group}
        
      .img-fill
        img(src= img)

      h4#members Members
      .list
        each person in people
          p= person

